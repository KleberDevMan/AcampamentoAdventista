<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kleber.acampamentoadventista">

    <!-- recursos necessarios -->
    <!-- so vai aparecer na play store para celulares com camera -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <!-- permissoes necessarias -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.MenuActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListaMusicasActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme2"
            tools:targetApi="jelly_bean" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activity.RoteiroActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.NewsActivity"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.MeditacaoActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".activity.ContatosActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".activity.CompartilharActivity"
            android:parentActivityName=".activity.MenuActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".activity.MolduraActivity"
            android:parentActivityName=".activity.CompartilharActivity"
            android:theme="@style/AppTheme2"
            tools:targetApi="jelly_bean" />
    </application>

</manifest>