<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorDark2</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- theme sem ActionBar -->
    <style name="AppTheme2" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorDark2</item>
    </style>

    <!-- stilo para o TabLayout -->
    <style name="tabs" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">45dp</item>
        <item name="tabPaddingEnd">45dp</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabTextColor">#fefefe</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!-- stilo para o ActionBar SeachButton -->
    <style name="actionBarComSeach" parent="Theme.AppCompat.NoActionBar">
    </style>

</resources>