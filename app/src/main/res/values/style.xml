<resources>

    <!-- theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/bg</item>
    </style>

    <!-- theme sem ActionBar -->
    <style name="AppTheme2" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/bg</item>
    </style>

    <!-- stilo para o TabLayout -->
    <style name="tabs" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabPaddingStart">30dp</item>
        <item name="tabPaddingEnd">30dp</item>
    </style>

    <!-- stilo para o ActionBar SeachButton -->
    <style name="actionBarComSeach" parent="Theme.AppCompat.NoActionBar">

    </style>

</resources>
