<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@color/celulaMusica"
    android:theme="@style/AppTheme2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/celula_nome_contato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="nome contato"
            android:textColor="@color/titulo1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/aldrich" />

        <TextView
            android:id="@+id/celula_numero_contato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:text="3333 3333"
            android:textColor="@color/titulo2"
            android:textSize="14sp"
            app:fontFamily="@font/aldrich" />
    </LinearLayout>

</android.support.v7.widget.CardView>